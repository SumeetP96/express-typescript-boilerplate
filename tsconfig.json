{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": ["es2015", "es2017", "dom"],
        "types": ["node", "express"],
        "baseUrl": "./src",
        "paths": {
            "@www/*": ["www/*"],
            "@package/*": ["packages/*"],
            "@lib/*": ["lib/*"],
            "@config/*": ["config/*"],
            "@util/*": ["utils/*"],
            "@type/*": ["types/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
